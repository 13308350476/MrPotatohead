<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/im_body"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/body"></ImageView>
        <ImageView
            android:id="@+id/im_arms"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/arms"></ImageView>
        <ImageView
            android:id="@+id/im_ears"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/ears"></ImageView>
        <ImageView
            android:id="@+id/im_eyes"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/eyes"></ImageView>
        <ImageView
            android:id="@+id/im_eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/eyebrows"></ImageView>
        <ImageView
            android:id="@+id/im_glasses"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/glasses"></ImageView>
        <ImageView
            android:id="@+id/im_hat"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/hat"></ImageView>
        <ImageView
            android:id="@+id/im_mouth"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/mouth"></ImageView>
        <ImageView
            android:id="@+id/im_mustache"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/mustache"></ImageView>
        <ImageView
            android:id="@+id/im_nose"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/nose"></ImageView>
        <ImageView
            android:id="@+id/im_shoes"
            android:layout_width="wrap_content"
            android:layout_height="319dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/shoes"></ImageView>


        <CheckBox
            android:id="@+id/arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="120dp"
            android:text="arms"
            ></CheckBox>
        <CheckBox
            android:id="@+id/ears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="220dp"
            android:text="ears"
            ></CheckBox>
        <CheckBox
            android:id="@+id/eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="120dp"
            android:text="eyebrows"
            ></CheckBox>
        <CheckBox
            android:id="@+id/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="220dp"
            android:text="eyes"
            ></CheckBox>
        <CheckBox
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="120dp"
            android:text="glasses"
            ></CheckBox>
        <CheckBox
            android:id="@+id/hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="220dp"
            android:text="hat"
            ></CheckBox>
        <CheckBox
            android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="120dp"
            android:text="mouth"
            ></CheckBox>
        <CheckBox
            android:id="@+id/mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="220dp"
            android:text="mustache"
            ></CheckBox>
        <CheckBox
            android:id="@+id/nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp"
            android:layout_marginLeft="120dp"
            android:text="nose"
            ></CheckBox>
        <CheckBox
            android:id="@+id/shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp"
            android:layout_marginLeft="220dp"
            android:text="shoes"
            ></CheckBox>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>